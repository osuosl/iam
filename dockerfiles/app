FROM osuosl/ruby-centos:2.3.0

RUN yum -y update
RUN yum -y install vim\
                   screen\
                   sudo\
                   sqlite-devel\
                   postgresql\
                   postgresql-devel\
                   mysql\
                   mysql-devel

RUN gem install bundle
COPY Gemfile /tmp/Gemfile
WORKDIR /tmp/
RUN bundle install

RUN echo 'source /data/code/dockerfiles/startup.sh' >> /root/.bashrc

WORKDIR /
