        <br>
        <div class="title">
          <h2>Clients List</h2>
          <a href="/clients/new">Create</a>
        </div>
        <br>
        <table class="table" style='table-layout:fixed'>
          <thead>
            <tr>
              <th>#</th>
              <th>Client Name</th>
              <th>Contact Name</th>
              <th>Contact Email</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
          <% for @client in @clients %>
            <% if @client.active %>
            <tr>
              <th scope="row"><%= @client.id %></th>
                <td>
                  <div class="ellipsis">
                    <a href="clients/<%= @client.id %>">
                      <%= @client.name %>
                    </a>
                  </div>
                </td>
                <td>
                  <div class="ellipsis">
                    <%= @client.contact_name %>
                  </div>
                </td>
                <td>
                  <div class="ellipsis">
                    <%= @client.contact_email %>
                  </div>
                </td>
                <td>
                  <div class="ellipsis">
                    <%= @client.description %>
                  </div>
                </td>
                <td>
                  <a href="clients/<%= @client.id %>/edit" >
                    Edit
                  </a>
                </td>
            </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>
      </div>
