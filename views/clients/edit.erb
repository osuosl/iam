<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Old</th>
        <th>New</th>
      </tr>
    </thead>
    <tbody>
      <form action='/clients' method='post'>
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="id" value="<%= @client.id %>">
        <tr>
          <td>name</td>
          <td>
            <% if @client %>
              <%= @client.name %>
            <% else %>
              N/A
            <% end %>
          </td>
          <td>
            <input type="text" name="name" placeholder="New name">
          </td>
        </tr>
        <tr>
          <td>contact_name</td>
          <td>
            <% if @client %>
              <%= @client.contact_name %>
            <% else %>
              N/A
            <% end %>
          </td>
          <td>
            <input type="text" name="contact_name" placeholder="New contact_name">
          </td>
        </tr>
        <tr>
          <td>description</td>
          <td>
            <% if @client %>
              <%= @client.description %>
            <% else %>
              N/A
            <% end %>
          </td>
          <td>
            <input type="text" name="description" placeholder="New description">
          </td>
        </tr>
        <tr>
          <td>contact_email</td>
          <td>
            <% if @client %>
              <%= @client.contact_email %>
            <% else %>
              N/A
            <% end %>
          </td>
          <td>
            <input type="text" name="contact_email" placeholder="New contact_email">
          </td>
        </tr>
        <tr>
          <td>
            <input type="submit" value="Update" class="btn btn-primary">
          </td>
          <td>
          </form>
          <% unless @client.name == 'default' %>
            <form action="/clients/<%= @client.id %>" method='post'>
              <input type="hidden" name="_method" value="delete">
              <input type="submit" value="Delete" class="btn btn-primary">
            </form>
          <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<br>
