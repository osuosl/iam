<div class="container">
  <legend> Edit Client </legend>

  <form action='/clients' method='post'>
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="id" value="<%= @client.id %>">
    <div class="form-group row">
      <label class="col-md-offset-3 col-md-5 control-label col-md-offset-3">Name</label>
      <div class="col-md-offset-3  col-md-5 inputGroupContainer col-md-offset-3">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="glyphicon glyphicon-briefcase"></i>
          </span>
          <input name="name" placeholder="<%= @client.name %>" class="form-control" type="text">
        </div>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-md-offset-3 col-md-5 control-label col-md-offset-3">Contact Name</label>
      <div class="col-md-offset-3  col-md-5 inputGroupContainer col-md-offset-3">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="glyphicon glyphicon-user"></i>
          </span>
          <input name="contact_name" placeholder="<%= @client.contact_name %>" class="form-control"  type="text">
        </div>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-md-offset-3 col-md-5 control-label col-md-offset-3">Description</label>
      <div class="col-md-offset-3  col-md-5 inputGroupContainer col-md-offset-3">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="glyphicon glyphicon-pencil"></i>
          </span>
          <textarea class="form-control" placeholder="<%= @client.description %>" name="@client.description"></textarea>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-md-offset-3 col-md-5 control-label col-md-offset-3">Contact Email</label>
      <div class="col-md-offset-3  col-md-5 inputGroupContainer col-md-offset-3">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="glyphicon glyphicon-envelope"></i>
          </span>
          <input name="contact_email" placeholder="<%= @client.contact_email %>" class="form-control"  type="text">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-3"></div>
      <div class="col-xs-3">
        <button type="submit" class="btn btn-success" >Update</button>
      </form>
    </div>
    <div class="col-xs-3">
      <% unless @client.name == 'default' %>
      <form action="/clients/<%= @client.id %>" method='post'>
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete" class="btn btn-primary">
      </form>
      <% end %>
    </div>
    <div class="col-xs-3"></div>
  </div>
</div>
<br>
