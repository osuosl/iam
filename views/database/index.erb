  <br>
  <div class="title">
    <h2>Database List</h2>
    <a href="/db/new">Create</a>
  </div>
  <br>
  <table class="table" style='table-layout:fixed'>
    <thead>
      <tr>
        <th>#</th>
        <th>Database Name</th>
        <th>Type</th>
        <th>Server</th>
      </tr>
    </thead>
    <tbody>
    <% for @db in @dbs %>
      <% if @db.active %>
      <tr>
        <th scope="row"><%= @db.id %></th>
          <td>
            <div class="ellipsis">
              <a href="/db/<%= @db.id %>">
                <%= @db.name %>
              </a>
            </div>
          </td>
          <td>
            <div class="ellipsis">
              <%= @db.type %>
            </div>
          </td>
          <td>
            <div class="ellipsis">
              <%= @db.server %>
            </div>
          </td>
          <td>
            <div class="ellipsis">
              <a href="/db/<%= @db.id %>/edit" >
                Edit
              </a>
            </div>
          </td>
      </tr>

      <% end %>
    <% end %>
    </tbody>
  </table>
