<div class="container">
  <form action='/dbs' name="createDatabase" method='post' onsubmit="return validateForm()">
    <fieldset>
      <legend> New Database </legend>
      <% if @error %>
        <div class="alert alert-danger" align="left">
          <strong>Invalid Input:</strong>
           That database already exists!
         </div>
      <% end %>

      <div class="form-group row">
        <label class="col-md-offset-3 col-md-5 control-label col-md-offset-3">Name</label>
          <div class="col-md-offset-3 col-md-5 inputGroupContainer col-md-offset-3">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="glyphicon glyphicon-briefcase"></i>
              </span>
              <input name="name" placeholder="New Name" class="form-control" type="text">
            </div>
          </div>
       </div>


       <div class="form-group row">
         <label class="col-md-offset-3 col-md-5 control-label col-md-offset-3">Select Project</label>
         <div class="col-md-offset-3  col-md-5 inputGroupContainer col-md-offset-3">
           <div class="input-group">
             <span class="input-group-addon">
               <i class="glyphicon glyphicon-list"></i>
             </span>
             <select name="project_id" class="form-control selectpicker" >
               <% for @project in @projects %>
                  <% if @project.active %>
                     <option value="<%= @project.id %>"><%= @project.name %></option>
                 <% end %>
               <% end %>
             </select>
           </div>
         </div>
       </div>

       <div class="form-group row">
         <label class="col-md-offset-3 col-md-5 control-label col-md-offset-3">Select SKU</label>
         <div class="col-md-offset-3  col-md-5 inputGroupContainer col-md-offset-3">
           <div class="input-group">
             <span class="input-group-addon">
               <i class="glyphicon glyphicon-barcode"></i>
             </span>
             <select name="sku_id" class="form-control selectpicker" >
               <option value="" selected disabled>None</option>
               <% for @sku in @skus %>
                  <% if @sku.active %>
                     <option value="<%= @sku.id %>"><%= @sku.name %></option>
                 <% end %>
               <% end %>
             </select>
           </div>
         </div>
       </div>

       <div class="form-group row">
         <label class="col-md-offset-3 col-md-5 control-label col-md-offset-3">Type</label>
           <div class="col-md-offset-3  col-md-5 inputGroupContainer col-md-offset-3">
             <div class="input-group">
               <span class="input-group-addon">
                 <i class="glyphicon glyphicon-tree-conifer"></i>
               </span>
               <input name="type" placeholder="Type" class="form-control" type="text">
             </div>
           </div>
        </div>

        <div class="form-group row">
          <label class="col-md-offset-3 col-md-5 control-label col-md-offset-3">Server</label>
            <div class="col-md-offset-3  col-md-5 inputGroupContainer col-md-offset-3">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-list-alt"></i>
                </span>
                <input name="server" placeholder="Server" class="form-control" type="text">
              </div>
            </div>
         </div>

         <div class="form-group row">
           <label class="col-md-offset-3 col-md-5 control-label col-md-offset-3"></label>
           <div class="col-md-offset-3  col-md-5  col-md-offset-3">
             <button type="submit" class="btn btn-success" >Create Database
               <span class="glyphicon glyphicon-saved"></span>
             </button>
           </div>
         </div>

       </fieldset>
      </form>

<script>
function validateForm() {
  var x = document.forms["createDatabase"]["name"].value;
  if (x == null || x == "") {
    alert("Name must be filled out");
    return false;
  }
}
</script>
