<div class="container">
  <h2>Project: <%= @project.name %> -
    <a href="/projects/<%= @project.id %>/edit">edit</a>
  </h2>
  <p>
    <% for @client in @clients %>
      <% if @client.active %>
      Client:
        <a href="/clients/<%= @client.id %>" >
          <%= @client.name %>
        </a>
      <% end %>
    <% end %>

    <br>
    Description: <%= @project.description %> <br>
    Active State: <%= @project.active %><br>
  </p>
  <br>
  <h4>Nodes</h4>
 
  <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
          <th>Cluster</th>
          <th>Active</th>
        </tr>
      </thead>
      <tbody>
      <% if @nodes %>
        <% for @node in @nodes %>
          <% if @node.active %>
          <tr>
            <td>
              <a href="/clients/<%= @node.id %>" >
                <%= @node.name %>
              </a>
            </td>
            <td>
              <%= @node.type %>
            </td>
            <td>
              <%= @node.cluster %>
            </td>
            <td>
              <%= @node.active %>
            </td>
          </tr>
          <% end %>
        <% end %>
      <% end  %>
      </tbody>
  </table>
  <br>
  <h4>Databases</h4>
  <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
          <th>Server</th>
          <th>Active</th>
        </tr>
      </thead>
      <tbody>
      <% if @dbs  %>
        <% for @db in @dbs %>
          <% if @db.active %>
          <tr>
            <td>
              <a href="/clients/<%= @node.id %>" >
                <%= @db.name %>
              </a>
            </td>
            <td>
              <%= @db.type %>
            </td>
            <td>
              <%= @db.server %>
            </td>
            <td>
              <%= @db.active %>
            </td>
          </tr>
          <% end %>
        <% end %>
      <% end  %>
      </tbody>
  </table>
  <br>
  <br>
</div>
