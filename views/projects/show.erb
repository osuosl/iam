<!DOCTYPE html>
<html>
<head>
<style>
.button {
  background-color: #E8E8E8; /* Green */
  border-radius: 12px;
  color: black;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 18px;
  margin: 4px 2px;
  cursor: pointer;
  -webkit-transition-duration: 0.4s; /* Safari */
  transition-duration: 0.4s;
}

</style>
</head>
<body>
  <div class="container">
    <h2>Project: <%= @project.name %> -
      <a href="/projects/<%= @project.id %>/edit">edit</a>
    </h2>
    <p>
      Client Id: <%= @project.client_id %> <br>
      Resources: <%= @project.resources %> <br>
      Description: <%= @project.description %> <br>
      Active: <%= @project.active %><br>
      <h3> Clients: </h3>
    </p>

    <% for @client in @clients %>
    <% if @client.active %>
    <button data-toggle="collapse" data-target=
      "#clientpanel" class="button " id="the_button">
      <span><%= @client.name %> &#9660</span>
    </button>
    <div id="clientpanel" class="collapse">
      <table class="table">
        <thead>
          <tr>
            <th>Client Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Description</th>
            <th>Active</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @client.id %></td>
            <td>
              <a href="/clients/<%= @client.id %>">
                <%= @client.name %>
              </a>
            </td>
            <td><%= @client.contact_email %></td>
            <td><%= @client.description %></td>
            <td><%= @client.active %></td>
          </tr>
        </div>
        <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <br>
</body>
</html>
