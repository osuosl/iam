<div class="container">
  <h2>Project: <%= @project.name %> -
    <a href="/projects/<%= @project.id %>/edit">edit</a>
  </h2>
  <p>
    <% if @client.active %>
      Client:
        <a href="/clients/<%= @client.id %>" >
          <%= @client.name %>
        </a>
    <% end %>

    <br>
    Description: <%= @project.description %> <br>
    <%= @project.active ? "Active" : "Inactive" %><br>

    <% if @data.nil? %>
      <p>
        <%= @project.name %> has no resources
      </p>
    <% else %>
      <% Report.plugin_matrix.each do |resource , measurements| %>
        <table class="table">
          <thead>
            <h4><%= "#{resource}".capitalize %></h4>
            <tr>
              <th>Name</th>
              <% measurements.each do |meas| %>
                <th><%= "#{meas}" %></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @data[resource].each do |resource_hash| %>
                <% resource_hash.each do |resource_name, resource_meas| %>
                  <td>
                      <a href="/<%= resource %>/<%= resource_meas['id']%>" >
                        <%= resource_name %>
                      </a>
                  </td>
                  <% resource_meas.each do |r_meas| %>
                    <% if r_meas[0] != 'id' %>
                      <td>
                        <%= r_meas[1] %>
                      </td>
                    <%end %>
                  <% end %>
                <% end %>
              <% end %>
            </tr>
          </tbody>
        </table>
      <% end %>
    <% end %>
  </p>
</div>
